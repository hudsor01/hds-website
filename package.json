{
	"$schema": "https://json.schemastore.org/package",
	"name": "hds-website",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "dotenv -e .env.production -- next start",
		"lint": "eslint .",
		"generate-sitemap": "dotenv -e .env.local -- tsx scripts/generate-sitemap.ts",
		"typecheck": "tsc --noEmit",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:fast": "playwright test --project=chromium",
		"test:e2e:report": "playwright show-report",
		"test:all": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e:fast",
		"prepare": "husky"
	},
	"dependencies": {
		"@heroicons/react": "2.2.0",
		"@playwright/test": "1.56.1",
		"@radix-ui/react-checkbox": "1.3.3",
