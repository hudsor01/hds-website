{
  "name": "hds-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "HTTPS=true next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "setup:https": "./scripts/setup-https.sh",
    "test:performance": "npm run build && npm run start & sleep 5 && lighthouse https://localhost:3000 --view",
    "optimize:images": "find public -name '*.jpg' -o -name '*.png' | xargs -I {} convert {} -quality 85 {}",
    "check:bundle": "npm run build:analyze",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tryghost/content-api": "^1.12.0",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "next": "15.4.3",
    "posthog-js": "^1.257.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^4.7.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.31.0",
    "eslint-config-next": "15.4.3",
    "husky": "^9.1.7",
    "playwright": "^1.54.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
