{
	"$schema": "https://json.schemastore.org/package",
	"name": "hds-website",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"dev:https": "cross-env HTTPS=true next dev",
		"build": "next build",
		"build:local": "next build",
		"build:analyze": "cross-env ANALYZE=true next build",
		"start": "next start",
		"start:local": "next start",
		"lint": "eslint .",
		"generate-sitemap": "tsx scripts/generate-sitemap.ts",
		"check:bundle": "npm run build:analyze",
		"typecheck": "tsc --noEmit",
		"optimize:images": "tsx scripts/optimize-images.ts public",
		"optimize:portfolio": "tsx scripts/optimize-images.ts public/portfolio",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:fast": "playwright test --project=chromium --workers=1",
		"test:e2e:a11y": "playwright test --grep '@accessibility'",
		"test:e2e:animations": "playwright test --project=animations",
		"test:e2e:animations:quick": "playwright test animations-quick.spec.ts --grep '@critical'",
		"test:e2e:report": "playwright show-report",
		"test:e2e:install": "playwright install",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:coverage": "vitest run --coverage",
		"test:all": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e:fast",
		"test:ci": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e",
		"env:validate": "tsx scripts/validate-env.ts",
		"env:setup": "cp .env.example .env.local && echo 'Created .env.local from template. Please update with your actual values.'",
		"clean": "rm -rf .next out playwright-report test-results",
		"clean:test": "rm -rf playwright-report test-results",
		"db:types:generate": "tsx scripts/generate-supabase-types.ts",
		"test:install": "npm run test:e2e:install",
		"test:update-snapshots": "playwright test --update-snapshots",
		"prepare": "husky"
	},
	"dependencies": {
		"@radix-ui/react-checkbox": "1.3.3",
		"@radix-ui/react-dialog": "1.1.15",
		"@radix-ui/react-dropdown-menu": "2.1.16",
		"@radix-ui/react-icons": "^1.3.2",
		"@radix-ui/react-radio-group": "1.3.8",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "1.2.6",
		"@radix-ui/react-tabs": "^1.1.13",
		"@radix-ui/react-tooltip": "1.2.8",
		"@supabase/supabase-js": "^2.57.4",
		"@t3-oss/env-nextjs": "0.13.8",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.13",
		"@tanstack/react-form": "1.25.0",
		"@tanstack/react-query": "5.90.10",
		"@tryghost/content-api": "^1.12.0",
		"@vercel/analytics": "^1.5.0",
		"@vercel/kv": "3.0.0",
		"@vercel/speed-insights": "1.2.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dompurify": "3.3.0",
		"lucide-react": "^0.544.0",
		"next": "^15.5.3",
		"next-themes": "0.4.6",
		"p-ratelimit": "^1.0.1",
		"postcss": "^8.5.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-error-boundary": "^6.0.0",
		"resend": "^6.1.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"vercel": "^48.5.0",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@eslint/eslintrc": "^3.3.1",
		"@playwright/test": "^1.55.0",
		"@tailwindcss/postcss": "^4.1.13",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.5.0",
		"@types/react": "19.1.9",
		"@types/react-dom": "19.1.9",
		"@vitejs/plugin-react": "^5.0.2",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.35.0",
		"eslint-config-next": "15.5.3",
		"happy-dom": "^20.0.7",
		"husky": "9.1.7",
		"playwright": "^1.55.0",
		"tailwindcss": "^4.1.13",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"webpack-bundle-analyzer": "^4.10.2"
	},
	"overrides": {
		"esbuild": "^0.25.11",
		"path-to-regexp": "^8.2.0",
		"undici": "^6.22.0"
	},
	"packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
