{
	"$schema": "https://json.schemastore.org/package",
	"name": "hds-website",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "dotenv -e .env.local -- next dev",
		"dev:https": "dotenv -e .env.local -- cross-env HTTPS=true next dev",
		"build": "next build",
		"build:local": "dotenv -e .env.local -- next build",
		"build:analyze": "dotenv -e .env.production -- cross-env ANALYZE=true next build",
		"start": "dotenv -e .env.production -- next start",
		"start:local": "dotenv -e .env.local -- next start",
		"lint": "eslint .",
		"generate-sitemap": "dotenv -e .env.local -- tsx scripts/generate-sitemap.ts",
		"check:bundle": "npm run build:analyze",
		"typecheck": "tsc --noEmit",
		"optimize:images": "tsx scripts/optimize-images.ts public",
		"optimize:portfolio": "tsx scripts/optimize-images.ts public/portfolio",
		"test:e2e": "dotenv -e .env.test -- playwright test",
		"test:e2e:ui": "dotenv -e .env.test -- playwright test --ui",
		"test:e2e:fast": "dotenv -e .env.test -- playwright test --project=chromium --workers=1",
		"test:e2e:a11y": "dotenv -e .env.test -- playwright test --grep '@accessibility'",
		"test:e2e:animations": "dotenv -e .env.test -- playwright test --project=animations",
		"test:e2e:animations:quick": "dotenv -e .env.test -- playwright test animations-quick.spec.ts --grep '@critical'",
		"test:e2e:report": "playwright show-report",
		"test:e2e:install": "playwright install",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:coverage": "vitest run --coverage",
		"test:all": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e:fast",
		"test:ci": "npm run lint && npm run typecheck && npm run test:unit && npm run test:e2e",
		"env:validate": "dotenv -e .env.local -- tsx scripts/validate-env.ts",
		"env:setup": "cp .env.example .env.local && echo 'Created .env.local from template. Please update with your actual values.'",
		"clean": "rm -rf .next out playwright-report test-results",
		"clean:test": "rm -rf playwright-report test-results",
		"db:types:generate": "dotenv -e .env.local -- tsx scripts/generate-supabase-types.ts",
		"test:install": "npm run test:e2e:install",
		"test:update-snapshots": "dotenv -e .env.test -- playwright test --update-snapshots"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"@radix-ui/react-icons": "^1.3.2",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.13",
		"@supabase/supabase-js": "^2.57.4",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.13",
		"@tanstack/react-form": "^1.20.0",
		"@vercel/analytics": "^1.5.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.544.0",
		"next": "^15.5.3",
		"next-sitemap": "^4.2.3",
		"p-ratelimit": "^1.0.1",
		"postcss": "^8.5.6",
		"posthog-js": "^1.266.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-error-boundary": "^6.0.0",
		"resend": "^6.1.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"vercel": "^48.0.1",
		"zod": "^4.1.8",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@eslint/eslintrc": "^3.3.1",
		"@playwright/test": "^1.55.0",
		"@tailwindcss/postcss": "^4.1.13",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.5.0",
		"@types/react": "19.1.9",
		"@types/react-dom": "19.1.9",
		"@vitejs/plugin-react": "^5.0.2",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.35.0",
		"eslint-config-next": "15.5.3",
		"happy-dom": "^20.0.7",
		"playwright": "^1.55.0",
		"playwright-lighthouse": "^4.0.0",
		"tailwindcss": "^4.1.13",
		"ts-jest": "^29.4.2",
		"tsx": "^4.20.5",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"webpack-bundle-analyzer": "^4.10.2"
	}
}
