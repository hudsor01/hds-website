{
  "name": "hds-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.local -- next dev",
    "dev:https": "dotenv -e .env.local -- cross-env HTTPS=true next dev",
    "build": "dotenv -e .env.production -- next build",
    "build:local": "dotenv -e .env.local -- next build",
    "build:analyze": "dotenv -e .env.production -- cross-env ANALYZE=true next build",
    "start": "dotenv -e .env.production -- next start",
    "start:local": "dotenv -e .env.local -- next start",
    "lint": "next lint",
    "generate-sitemap": "dotenv -e .env.local -- tsx scripts/generate-sitemap.ts",
    "check:bundle": "npm run build:analyze",
    "typecheck": "tsc --noEmit",
    "test:e2e": "dotenv -e .env.test -- playwright test",
    "test:e2e:ui": "dotenv -e .env.test -- playwright test --ui",
    "test:e2e:debug": "dotenv -e .env.test -- playwright test --debug",
    "test:e2e:headed": "dotenv -e .env.test -- playwright test --headed",
    "test:e2e:chrome": "dotenv -e .env.test -- playwright test --project=chromium",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run lint && npm run typecheck && npm run test:e2e",
    "env:validate": "dotenv -e .env.local -- tsx scripts/validate-env.ts",
    "env:setup": "cp .env.example .env.local && echo 'Created .env.local from template. Please update with your actual values.'"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.15",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/themes": "^3.2.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "next": "15.4.5",
    "next-seo": "^6.8.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "nextjs-toploader": "^3.8.16",
    "posthog-js": "^1.258.5",
    "prom-client": "^15.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.61.1",
    "resend": "^4.7.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.5",
    "husky": "^9.1.7",
    "playwright": "^1.54.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
