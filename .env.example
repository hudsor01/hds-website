# Hudson Digital Solutions - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# EMAIL SERVICE (Required for contact form)
# ============================================================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# GHOST CMS (Optional - for blog content)
# ============================================================================
# Your self-hosted Ghost instance URL
GHOST_API_URL=https://blog.thehudsonfam.com

# Get from Ghost Admin → Settings → Integrations → Add custom integration
GHOST_CONTENT_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================
# Google Analytics 4
# Get from: https://analytics.google.com/analytics/web/ → Admin → Data Streams
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# GA4 Measurement Protocol API Secret (for server-side events)
# Get from: Admin → Data Streams → Select Stream → Measurement Protocol API secrets
GA4_API_SECRET=xxxxxxxxxxxxxxxxxxxx

# PostHog Analytics (Optional)
# Get from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# SEO & VERIFICATION
# ============================================================================
# Google Search Console verification code
# Get from: https://search.google.com/search-console → Settings → Ownership verification
GOOGLE_SITE_VERIFICATION=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# SECURITY
# ============================================================================
# CSRF token secret (generate a random string)
# Generate with: openssl rand -base64 32
CSRF_SECRET=your_random_secret_here

# Cron job secret (for scheduled tasks/webhooks)
# Generate with: openssl rand -base64 32
CRON_SECRET=your_random_cron_secret_here

# ============================================================================
# SUPABASE (Optional - if using database features)
# ============================================================================
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxx

# Service role key (for server-side operations only - keep secret!)
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxx

# ============================================================================
# NOTIFICATIONS (Optional)
# ============================================================================
# Discord webhook URL for system notifications
# Get from: Discord Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxxxxxxxxxx/xxxxxxxxxxxxxxxx

# ============================================================================
# DEVELOPMENT TOOLS (Optional)
# ============================================================================
# Set to 'true' to enable bundle analysis on build
ANALYZE=false

# Node environment (usually auto-detected)
NODE_ENV=development
