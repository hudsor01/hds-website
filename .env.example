# Hudson Digital Solutions - Environment Variables
# Copy this file to .env.local and fill in your values
#
# Required variables are marked with [REQUIRED]
# Optional variables have sensible defaults or are only needed for specific features

# ================================
# Node Environment
# ================================
NODE_ENV=development

# ================================
# Base URLs
# ================================
BASE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ================================
# Database (Neon PostgreSQL)
# ================================
# Get your DATABASE_URL from Neon Console: https://console.neon.tech
# Format: postgres://user:password@host/database?sslmode=require
DATABASE_URL=

# Neon Auth (optional - for authentication features)
NEON_AUTH_BASE_URL=

# ================================
# Email (Resend)
# ================================
# Get your API key from Resend: https://resend.com/api-keys
# Optional in development - emails will be skipped
RESEND_API_KEY=

# ================================
# Security
# ================================
# [REQUIRED in production] At least 32 characters for CSRF protection
# Generate with: openssl rand -base64 32
CSRF_SECRET=

# JWT Secret for authentication (at least 16 characters)
# Generate with: openssl rand -base64 24
JWT_SECRET=

# Admin API Token (at least 16 characters)
# Used for admin endpoints authentication
ADMIN_API_TOKEN=

# ================================
# Webhooks (Optional)
# ================================
# Discord notifications for contact form submissions
DISCORD_WEBHOOK_URL=

# Database webhook secret for Neon webhooks
DATABASE_WEBHOOK_SECRET=

# ================================
# PDF Generation (Optional)
# ================================
# Self-hosted Stirling PDF instance URL
# Required for server-side HTML-to-PDF conversion (invoice/contract generators)
STIRLING_PDF_URL=

# ================================
# Cron Jobs (Optional)
# ================================
# Secret for authenticating cron job requests
CRON_SECRET=

# ================================
# SEO (Optional)
# ================================
# Google Search Console verification
GOOGLE_SITE_VERIFICATION=

# ================================
# Skip Validation (CI/Build)
# ================================
# Set to true to skip env validation during builds
# Useful for CI/CD pipelines where env vars are injected at runtime
# SKIP_ENV_VALIDATION=true
